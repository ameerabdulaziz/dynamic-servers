# Environment Variables Example
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://dynamic_user:dynamic_pass@localhost:5432/dynamic_servers

# Flask Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-immediately
FLASK_ENV=production

# Hetzner Cloud API
HETZNER_API_TOKEN=your-hetzner-api-token-here

# Replit Configuration (if deploying on Replit)
REPL_ID=dynamic-servers

# PostgreSQL Configuration (for direct database access)
PGHOST=localhost
PGPORT=5432
PGDATABASE=dynamic_servers
PGUSER=dynamic_user
PGPASSWORD=dynamic_pass

# Optional: SSL Configuration
# SSL_DISABLE=false

# Optional: Logging Level
# LOG_LEVEL=INFO